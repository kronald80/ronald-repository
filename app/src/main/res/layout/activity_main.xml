<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFAFA"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".Sports1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECYCLERVIEW"
        android:layout_marginLeft="80dp"
        android:textColor="@color/teal_200"
        android:padding="15dp"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/baseball"
        android:layout_width="410dp"
        android:layout_height="157dp"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/baseball" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEWS"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:padding="1dp"
            android:text="Nike enters 10-year partnership with major league baseball."/>

        <ImageView
            android:id="@+id/badminton"
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:src="@drawable/soccer_stadium"
            android:scaleType="fitXY"
            android:padding="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEWS"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@color/teal_700"
            android:textStyle="bold"
            android:padding="1dp"
            android:layout_marginLeft="30dp"
            android:text="Indonesia Masters- Saina nehwal sails into semifinals PV sindhu ,kidamba srikanth lost in quaters."/>


    </LinearLayout>
